[DEFAULT]
ignoreip = {{ ignoreip }} 

# 
bantime = {{ bantime }}
findtime = {{ findtime }}
maxretry = {{ maxretry }}
action = ufw
banaction = ufw

# Modo de detecção
backend = polling

#
# JAILS
#

#
# SSH
#
[ssh]
enabled = true
port    = {{ ssh_port }}
filter  = sshd
logpath = /var/log/auth.log


#
# NGINX
#
[nginx-http-auth]
enabled = true
filter  = nginx-http-auth
port    = http,https
logpath = /var/log/nginx/error.log

[nginx-badbots]
enabled  = true
port     = http,https
filter   = nginx-badbots
logpath  = /var/log/nginx/access.log

[nginx-nohome]
enabled  = true
port     = http,https
filter   = nginx-nohome
logpath  = /var/log/nginx/access.log

[nginx-noproxy]
enabled  = true
port     = http,https
filter   = nginx-noproxy
logpath  = /var/log/nginx/access.log


#
# MYSQL
#
[mysqld]
enabled = true
port    = 3306
filter  = mysqld-auth
logpath = /var/log/mysql/error.log
